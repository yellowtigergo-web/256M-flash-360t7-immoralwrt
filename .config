# This is an empty file, please overwrite it after generating the .config file with the source code
# =========================================================
# ImmortalWrt 24.10 (openwrt-24.10) - 360T7 base config
# Target: mediatek/filogic
# Device: qihoo 360 t7
# =========================================================

CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_qihoo_360t7=y

# Use squashfs (typical for sysupgrade images)
CONFIG_TARGET_ROOTFS_SQUASHFS=y

# =========================================================
# LuCI Web UI (basic & stable)
# =========================================================
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-ssl=y
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_uhttpd-mod-ubus=y

# Chinese UI
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y

# =========================================================
# Basic tools (safe)
# =========================================================
CONFIG_PACKAGE_openssh-sftp-server=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_ca-bundle=y
CONFIG_PACKAGE_ca-certificates=y

# =========================================================
# Common network utils (safe)
# =========================================================
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_iptables-nft=y
CONFIG_PACKAGE_kmod-nft-tproxy=y
CONFIG_PACKAGE_nftables=y

# PPPoE (many people need it)
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_ppp-mod-pppoe=y
CONFIG_PACKAGE_luci-proto-ppp=y

# IPv6 basic
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_ip6tables-nft=y
CONFIG_PACKAGE_kmod-ipv6=y

# =========================================================
# Keep default settings sane
# =========================================================
CONFIG_PACKAGE_default-settings=y
